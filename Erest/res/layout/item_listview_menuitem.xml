<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/imgMenuMenuItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher"/>
    
    <LinearLayout 
        android:id="@+id/llyMenuItemDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/txtMenuItemName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:gravity="center"

            android:text="小葱拌机器人"
            android:textColor="@android:color/black"
            style="@android:style/TextAppearance.Medium.Inverse"/>
        
        <TextView 
            android:id="@+id/txtMenuItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            
            android:text="香酥可口，回味无穷"
            android:textColor="@android:color/darker_gray"
            style="@android:style/TextAppearance.Small.Inverse"/>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            
        <TextView 
            android:id="@+id/txtMenuItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            
            android:text="￥29"
            android:textColor="#ff0000"
            style="@android:style/TextAppearance.Large.Inverse"/>
        
        <Button 
            android:id="@+id/btnMenuAddItem"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="+"/>
        
        </RelativeLayout>
        
    </LinearLayout>
    

</LinearLayout>
